{
    "name": "openeuropa/ecl-twig-loader",
    "description": "Europa Component Library Twig loader.",
    "type": "library",
    "license": "EUPL-1.2",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "twig/twig": "^1.34"
    },
    "require-dev": {
        "cweagans/composer-patches": "~1.6",
        "openeuropa/code-review": "~1.0.0-beta2",
        "phpunit/phpunit": "~5.5||~6.0"
    },
    "autoload": {
        "psr-4": {
            "OpenEuropa\\Twig\\": "src/"
        }
    },
    "extra": {
        "composer-exit-on-patch-failure": true,
        "enable-patching": true
    },
    "scripts": {
        "changelog": "docker run --rm -v \"$(pwd):$(pwd)\" -w $(pwd) muccg/github-changelog-generator openeuropa/ecl-twig-loader -t $CHANGELOG_GITHUB_TOKEN --future-release=$CHANGELOG_FUTURE_RELEASE"
    },
    "config": {
        "sort-packages": true
    }
}
