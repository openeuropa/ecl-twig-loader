{
    "name": "openeuropa/ecl-twig-loader",
    "description": "Europa Component Library Twig loader.",
    "type": "library",
    "license": "EUPL-1.2",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=8.0",
        "twig/twig": "^2.7 || ^3.4"
    },
    "require-dev": {
        "openeuropa/code-review": "^2.0",
        "phpunit/phpunit": "^8.5.23 || ^9"
    },
    "autoload": {
        "psr-4": {
            "OpenEuropa\\Twig\\": "src/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "cweagans/composer-patches": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpro/grumphp": true
        }
    },
    "scripts": {
        "changelog": "docker run --rm -v \"$(pwd):$(pwd)\" -w $(pwd) muccg/github-changelog-generator openeuropa/ecl-twig-loader -t $CHANGELOG_GITHUB_TOKEN --future-release=$CHANGELOG_FUTURE_RELEASE --release-branch=3.x"
    },
    "extra": {
        "_readme": [
            "Explicit minimum version of phpunit/phpunit 8 to due to https://stackoverflow.com/a/70974793"
        ]
    }
}
